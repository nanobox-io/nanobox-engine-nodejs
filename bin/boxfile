#!/bin/bash
# -*- mode: bash; tab-width: 2; -*-
# vim: ts=2 sw=2 ft=bash noet

# source the Nos framework
. /opt/nos/common.sh

# initialize Nos with the original arguments
nos_init "$@"

# source common lib
. ${engine_lib_dir}/nodejs.sh

# notify the user of configuration
nodejs_report_boxfile

# detect required lib_dirs for asset frameworks
nodejs_detect_asset_lib_dirs

# dynamically generate a Boxfile from a template,
# and print to stdout
nodejs_generate_boxfile
